---
import { site } from "@/constants";
import { getReadingStaticPathsPage as getStaticPaths } from "@/lib/astro";
import { LayoutDefault } from "@/components/layout";
import { getBookmarksByCollection } from "@/lib/raindrop";
import {
  ReadingHero,
  ReadingList,
  ReadingPagination,
} from "@/components/organisms/reading";

export { getStaticPaths };

const { page } = Astro.params;
const entries = await getBookmarksByCollection("reading");
const meta = site.pages.reading;
const isIndex = false;
---

<LayoutDefault {...meta} type="main">
  <ReadingHero />
  <ReadingList {entries} {isIndex} {page} />
  <ReadingPagination {entries} {isIndex} {page} />
</LayoutDefault>
