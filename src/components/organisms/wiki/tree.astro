/**
 * ğŸŒ³ WikiTree Organism
 * 
 * @description Hierarchical tree navigation for wiki content.
 * Builds and displays nested folder/file structure from entries.
 * 
 * @usage
 * ```astro
 * <WikiTree entries={wikiEntries} />
 * ```
 * 
 * @compatible
 * - ğŸŒ³ Uses TreeNode component recursively
 * - ğŸ“ Displays folder and file icons
 * - ğŸ”„ Auto-generated from wiki content structure
 * - â¡ï¸ Expandable/collapsible sections
 */
import { TreeNode } from "@/components/molecules";
import type { Entries } from "@/lib/collections";
import { getTreeNode } from "@/lib/tree-node";

interface Props {
  entries: Entries;
}

const { entries } = Astro.props;
const wikiStructure = getTreeNode(entries, "wiki");
---

<div class="border-divider rounded border">
  <div class="divide-divider divide-y">
    {
      wikiStructure.map((node) => (
        <div class="py-1">
          <TreeNode node={node} level={0} />
        </div>
      ))
    }
  </div>
</div>
