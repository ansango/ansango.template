---
/**
 * ğŸ–¼ï¸ Image Component
 * 
 * @description Optimized image component using Astro Image with placeholder fallback.
 * Automatically handles image optimization and shows a placeholder if no src is provided.
 * 
 * @usage
 * ```astro
 * <Image 
 *   src="/avatar.jpg" 
 *   alt="Profile photo" 
 *   width={100} 
 *   height={100}
 * />
 * 
 * <!-- Without src, shows placeholder -->
 * <Image alt="No image" />
 * ```
 * 
 * @compatible
 * - ğŸ­ Uses ImagePlaceholder as fallback
 * - ğŸš€ Automatic Astro optimization
 * - ğŸ“± Responsive with lazy loading
 */
import { Image as ImageAstro } from "astro:assets";
import Placeholder from "./image.placeholder.astro";


export interface Props {
  className?: string;
  src?: string;
  alt?: string;
  width?: number;
  height?: number;
  loading?: "eager" | "lazy";
}

const {
  className = "w-full h-auto object-cover aspect-square",
  src,
  alt = "caption",
  width = 46,
  height = 46,
  loading = "lazy",
} = Astro.props;
---

{
  src ? (
    <ImageAstro
      src={src}
      alt={alt}
      class={className}
      width={width}
      height={height}
      loading={loading}
    />
  ) : (
    <Placeholder className={className} />
  )
}
